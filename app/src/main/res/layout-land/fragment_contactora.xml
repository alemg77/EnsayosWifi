<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ContactoraFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Contactora"
                    android:textColor="@color/black"
                    android:textSize="35sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewT1Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:text="T1"
                    android:textSize="45sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textViewTitulo" />

                <TextView
                    android:id="@+id/textViewT1Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="--"
                    android:textSize="45sp"
                    app:layout_constraintStart_toEndOf="@+id/textViewT1Name"
                    app:layout_constraintTop_toTopOf="@+id/textViewT1Name" />

                <TextView
                    android:id="@+id/textViewT2Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:text="T2"
                    android:textSize="45sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textViewT1Name" />

                <TextView
                    android:id="@+id/textViewT2Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="--"
                    android:textSize="45sp"
                    app:layout_constraintStart_toEndOf="@+id/textViewT2Name"
                    app:layout_constraintTop_toTopOf="@+id/textViewT2Name" />

                <Button
                    android:id="@+id/bottomActualizar"
                    android:layout_width="230dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:text="Actualizar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewTitulo" />


                <Button
                    android:id="@+id/bottomConfig"
                    android:layout_width="230dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:text="Configurar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/bottomActualizar"
                    app:layout_constraintTop_toBottomOf="@+id/bottomActualizar" />


                <Button
                    android:id="@+id/bottomPrenderContactora"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:text="Activar Contactora"
                    app:layout_constraintEnd_toStartOf="@+id/bottomApagarContactora"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bottomBuscarDispocitivos" />

                <Button
                    android:id="@+id/bottomApagarContactora"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:text="Apagar Contactora"
                    app:layout_constraintBottom_toBottomOf="@+id/bottomPrenderContactora"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.627"
                    app:layout_constraintStart_toEndOf="@+id/bottomPrenderContactora"
                    app:layout_constraintTop_toTopOf="@+id/bottomPrenderContactora" />

                <Button
                    android:id="@+id/bottomBuscarDispocitivos"
                    android:layout_width="230dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:text="Buscar dispocitivos"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/bottomActualizar"
                    app:layout_constraintTop_toBottomOf="@+id/bottomConfig" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </FrameLayout>
</layout>